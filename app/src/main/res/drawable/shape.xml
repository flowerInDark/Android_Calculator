<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--  背景  -->
    <solid android:color="#FFF"/>

    <!--  内边距  -->
    <padding
        android:right="10dp"
        android:top="20dp"
        android:left="20dp"
        android:bottom="20dp"/>

    <!--  圆角  -->
    <corners android:radius="14dp"/>

    <!--  阴影  -->
    <stroke
        android:width="1dp"
        android:color="#535252"/>

</shape>
